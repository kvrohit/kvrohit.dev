---
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("../../posts/*.md");
  return posts.map((p) => ({
    params: { slug: p.file.split("/").pop().split(".").shift() },
    props: { post: p },
  }));
}

const { Content, frontmatter } = Astro.props.post;
const { title, description, publishDate } = frontmatter;
---

<Layout title={title}>
  <nav>

  <h1 class="text-3xl my-4">
    <span
      class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-red-500 font-bold"
      >{title}
    </span>
  </h1>
    <ul>
      <li>
        <a class="text-gray-500 hover:text-gray-800" href="/blog">&larr; back</a>
      </li>
    </ul>
      </nav>
  <main>
    <article class="mt-4 max-w-none prose prose-lg prose-video:w-full">
    <Content />
      </article>
  </main>
</Layout>
