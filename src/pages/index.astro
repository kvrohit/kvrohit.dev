---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Home - kvrohit.dev">
  <main>
    <h1 class="text-3xl my-4">
      Welcome to <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-red-500 font-bold"
        >kvrohit.dev
      </span>
    </h1>
    <ul role="list" class="grid md:grid-cols-3 gap-8">
      <Card href="/blog" title="Blog" body="Blog posts" />
      <Card
        href="https://github.com/kvrohit"
        title="Github"
        body="Projects"
        external={true}
      />
      <Card
        href="https://youtube.com/c/RohitViswanath"
        title="YouTube"
        body="Compositions"
        external={true}
      />
    </ul>
  </main>
</Layout>
